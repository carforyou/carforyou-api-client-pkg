{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "outDir": "./pkg",
    "rootDirs": ["./src"],
    "declaration": true,
    "baseUrl": "src",
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "typeRoots": [ "./node_modules/@types" ],
  "include": ["src", "__tests__"],
  "exclude": ["node_modules", "pkg"]
}
