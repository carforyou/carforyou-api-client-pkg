{
  "compilerOptions": {
    "outDir": "./pkg",
    "rootDirs": ["./src"],
    "module": "esnext",
    "target": "es2020",
    "lib": ["es2020", "dom"],
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "typeRoots": ["./node_modules/@types"],
  "include": ["src"],
  "exclude": ["node_modules", "pkg"]
}
